{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    },
    "exactOptionalPropertyTypes": false
  },
  "include": [
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "app",
    "utils",
    "hooks",
    "store",
    "components",
    "constants",
    "libs",
    "**/*/index.ts",
    "types",
    "values"
  ],
  "exclude": ["node_modules", "dist", "babel.config.js", "jest.config.js"]
}
