{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    },
    "jsx": "react-native",
    "lib": ["ESNext"],
    "target": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "exactOptionalPropertyTypes": false,
    "noEmit": true,
    "noErrorTruncation": true
  },
  "include": [
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "app",
    "utils",
    "hooks",
    "store",
    "features",
    "components",
    "constants",
    "libs",
    "**/*/index.ts",
    "types",
    "values"
  ],
  "exclude": ["node_modules", "dist", "babel.config.js", "jest.config.js"]
}
