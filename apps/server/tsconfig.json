{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "target": "ES2022",
    "sourceMap": true,
    "incremental": true,
    "exactOptionalPropertyTypes": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "experimentalDecorators": true
  },
  "include": [
    "src",
    "types",
    "prisma",
    "scripts",
    "drizzle.config.ts",
    "drizzle"
  ],
  "exclude": ["node_modules"]
}
