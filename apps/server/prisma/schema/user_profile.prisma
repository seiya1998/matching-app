// ユーザーのプロフィール情報
model RUserProfiles {
  id       String @id @default(cuid())
  userId   String @unique @map("user_id")
  nickname String @map("nickname") // 必須: 表示名がないと他ユーザーに見せられない

  // 以下は任意入力項目
  bloodType           BloodType?          @map("blood_type")
  height              Int?                @map("height")
  bodyType            BodyType?           @map("body_type")
  residencePrefecture String?             @map("residence_prefecture") // 居住地都道府県
  residenceCity       String?             @map("residence_city") // 居住地市区町村
  birthplace          String?             @map("birthplace") // 出身地
  workplacePrefecture String?             @map("workplace_prefecture") // 勤務地都道府県
  workplaceCity       String?             @map("workplace_city") // 勤務地市区町村
  siblingPosition     SiblingPosition?    @map("sibling_position") // 兄弟構成
  educationLevel      EducationLevel?     @map("education_level") // 学歴
  schoolName          String?             @map("school_name") // 学校名
  annualIncomeRange   AnnualIncomeRange?  @map("annual_income_range") // 年収
  occupation          Occupation?         @map("occupation") // 職業
  occupationName      String?             @map("occupation_name") // 職業名
  holiday             Holiday?            @map("holiday") // 休日情報
  drinkingHabit       DrinkingHabit?      @map("drinking_habit") // 飲酒習慣
  smokingHabit        SmokingHabit?       @map("smoking_habit") // 喫煙習慣
  livingSituation     LivingSituation?    @map("living_situation") // 同居人
  maritalHistory      MaritalHistory?     @map("marital_history") // 結婚歴
  hasChildren         HasChildren?        @map("has_children") // 子供の有無
  marriageIntention   MarriageIntention?  @map("marriage_intention") // 結婚意向
  wantsChildren       WantsChildren?      @map("wants_children") // 子供の希望
  houseworkChildcare  HouseworkChildcare? @map("housework_childcare") // 家事・育児
  meetingPreference   MeetingPreference?  @map("meeting_preference") // 出会うまでの希望
  dateExpense         DateExpense?        @map("date_expense") // デート費用
  sociability         Sociability?        @map("sociability") // 社交性

  // リレーション
  user              RUsers                @relation(fields: [userId], references: [id])
  userProfileUpdate EUserProfileUpdates[]

  // インデックス
  @@index([residencePrefecture, residenceCity])
  @@index([workplacePrefecture, workplaceCity])
  @@index([height])
  @@index([bloodType])
  @@index([bodyType])
  @@index([birthplace])
  @@index([siblingPosition])
  @@index([educationLevel])
  @@index([annualIncomeRange])
  @@index([occupation])
  @@index([holiday])
  @@index([drinkingHabit])
  @@index([smokingHabit])
  @@index([livingSituation])
  @@index([maritalHistory])
  @@index([hasChildren])
  @@index([marriageIntention])
  @@index([wantsChildren])
  @@index([houseworkChildcare])
  @@index([meetingPreference])
  @@index([dateExpense])
  @@index([sociability])
  @@map("r_user_profiles")
}

// ユーザープロフィールの更新履歴
model EUserProfileUpdates {
  id            String   @id @default(cuid())
  userProfileId String   @map("user_profile_id")
  createdAt     DateTime @default(now()) @map("created_at")

  // リレーション
  userProfile RUserProfiles @relation(fields: [userProfileId], references: [id])

  @@map("e_user_profile_updates")
}
